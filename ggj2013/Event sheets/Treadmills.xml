                    <param id="0" name="Instance variable">TreadmillMomentum</param>
                    <param id="1" name="Value">FastTreadmillMomentum</param>
                </action>
                <action behavior="CustomMovement" id="2" name="Set speed" type="Player">
                    <param id="0" name="Which">1</param>
                    <param id="1" name="Speed">RightFastTreadmillTest.TreadmillMomentum</param>
                </action>
            </actions>
        </event-block>
        <comment>Reduces momentum from fast treadmills each tick by TreadmillMomentumReduction.</comment>
        <event-block>
            <conditions>
                <condition id="-1" name="Every tick" type="System" />
            </conditions>
            <actions />
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="-7" name="Compare instance variable" type="LeftFastTreadmillTest">
                            <param id="0" name="Instance variable">TreadmillMomentum</param>
                            <param id="1" name="Comparison">2</param>
                            <param id="2" name="Value">0</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-10" name="Set value" type="LeftFastTreadmillTest">
                            <param id="0" name="Instance variable">TreadmillMomentum</param>
                            <param id="1" name="Value">LeftFastTreadmillTest.TreadmillMomentum+TreadmillMomentumReduction</param>
                        </action>
                        <action behavior="CustomMovement" id="2" name="Set speed" type="Player">
                            <param id="0" name="Which">1</param>
                            <param id="1" name="Speed">LeftFastTreadmillTest.TreadmillMomentum</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-22" name="Else" type="System" />
                    </conditions>
                    <actions />
                    <sub-events>
                        <event-block>
                            <conditions>
                                <condition id="-7" name="Compare instance variable" type="RightFastTreadmillTest">
                                    <param id="0" name="Instance variable">TreadmillMomentum</param>
                                    <param id="1" name="Comparison">4</param>
                                    <param id="2" name="Value">0</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action id="-10" name="Set value" type="RightFastTreadmillTest">
                                    <param id="0" name="Instance variable">TreadmillMomentum</param>
                                    <param id="1" name="Value">RightFastTreadmillTest.TreadmillMomentum-TreadmillMomentumReduction</param>
                                </action>
                                <action behavior="CustomMovement" id="2" name="Set speed" type="Player">
                                    <param id="0" name="Which">1</param>
                                    <param id="1" name="Speed">RightFastTreadmillTest.TreadmillMomentum</param>
                                </action>
                            </actions>
                        </event-block>
                    </sub-events>
                </event-block>
            </sub-events>
        </event-block>
    </events>
</c2eventsheet>
