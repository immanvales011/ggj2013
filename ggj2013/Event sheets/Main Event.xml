            </conditions>
            <actions>
                <action id="4" name="Set animation" type="PlayerFeet_Idle">
                    <param id="0" name="Animation">&quot;Air&quot;</param>
                    <param id="1" name="From">1</param>
                </action>
            </actions>
        </event-block>
