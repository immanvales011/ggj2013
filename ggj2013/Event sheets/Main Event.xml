        <event-block>
            <conditions>
                <condition id="0" name="On key pressed" type="Keyboard">
                    <param id="0" name="Key">49 (1)</param>
                </condition>
            </conditions>
            <actions>
                <action id="-15" name="Set visible" type="PlayerCollision">
                    <param id="0" name="Visibility">1</param>
                </action>
            </actions>
        </event-block>
