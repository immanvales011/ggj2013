                </action>
                <action id="0" name="Set text" type="UI_Weight">
                    <param id="0" name="Text">&quot;Weight: &quot; &amp;int(PlayerBody.fatness * 100)</param>
                </action>
                <action id="0" name="Set text" type="UI_Heartrate">
                    <param id="0" name="Text">&quot;Heart Rate: &quot; &amp;int(PlayerBody.heartRate * 100)</param>
                </action>
                <action id="0" name="Set text" type="UI_FatState">
