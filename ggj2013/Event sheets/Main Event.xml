                <event-block>
                    <conditions>
                        <condition id="-22" name="Else" type="System" />
                        <condition id="-7" name="Compare instance variable" type="PlayerBody">
                            <param id="0" name="Instance variable">fatState</param>
                            <param id="1" name="Comparison">0</param>
                            <param id="2" name="Value">3</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="0" name="Play" type="Audio">
                            <param id="0" name="Audio file">SFX_jump_03</param>
                            <param id="2" name="Loop">0</param>
                            <param id="3" name="Volume">-20</param>
                            <param id="1" name="Tag (optional)">&quot;jump3&quot;</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-22" name="Else" type="System" />
                        <condition id="-7" name="Compare instance variable" type="PlayerBody">
                            <param id="0" name="Instance variable">fatState</param>
                            <param id="1" name="Comparison">0</param>
