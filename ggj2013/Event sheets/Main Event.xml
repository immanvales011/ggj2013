                </action>
                <action id="6" name="Stop" type="Audio">
                    <param id="0" name="Tag">&quot;music2&quot;</param>
                </action>
                <action id="6" name="Stop" type="Audio">
                    <param id="0" name="Tag">&quot;music3&quot;</param>
                </action>
                <action id="6" name="Stop" type="Audio">
                    <param id="0" name="Tag">&quot;music4&quot;</param>
