                </action>
                <action id="5" name="Set frame" type="PlayerHead">
                    <param id="0" name="Frame number">0</param>
                </action>
            </actions>
        </event-block>
        <event-block any="1">
            <conditions>
                <condition behavior="Platform" id="3" name="Is jumping" type="PlayerCollision" />
