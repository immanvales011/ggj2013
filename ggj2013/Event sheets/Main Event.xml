            <conditions>
                <condition behavior="Platform" id="0" inverted="1" name="Is moving" type="PlayerCollision" />
            </conditions>
            <actions>
                <action id="4" name="Set animation" type="PlayerFeet_Idle">
                    <param id="0" name="Animation">&quot;RunStop&quot;</param>
                    <param id="1" name="From">1</param>
                </action>
                <action id="4" name="Set animation" type="PlayerFeet_Idle">
                    <param id="0" name="Animation">&quot;Default&quot;</param>
                    <param id="1" name="From">1</param>
                </action>
                <action id="4" name="Set animation" type="PlayerArms">
                    <param id="0" name="Animation">&quot;Default&quot;</param>
