                <action id="0" name="Call function" type="Function">
                    <param id="0" name="Name">&quot;fan&quot;</param>
                    <param id="1" name="Parameter {n}"></param>
                </action>
                <action behavior="Platform" id="9" name="Set vector Y" type="PlayerCollision">
                    <param id="0" name="Vector Y">PlayerCollision.Platform.VectorY-75</param>
