        <event-block>
            <conditions>
                <condition id="-7" name="Compare instance variable" type="Player_Body_Art_Test">
                    <param id="0" name="Instance variable">fatState</param>
                    <param id="1" name="Comparison">0</param>
                    <param id="2" name="Value">1</param>
                </condition>
            </conditions>
            <actions>
                <action behavior="Platform" id="4" name="Set jump strength" type="Player_Collision">
