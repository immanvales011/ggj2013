        <event-block disabled="1">
            <conditions>
                <condition id="-5" name="Compare width" type="Player_Body_Art_Test">
                    <param id="0" name="Comparison">3</param>
                    <param id="1" name="Width">16</param>
                </condition>
            </conditions>
            <actions>
                <action id="-10" name="Set value" type="Player_Body_Art_Test">
                    <param id="0" name="Instance variable">fatState</param>
                    <param id="1" name="Value">1</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="-6" name="Every X seconds" type="System">
                    <param id="0" name="Interval (seconds)">0.1</param>
                </condition>
            </conditions>
            <actions>
                <action id="0" name="Call function" type="Function">
                    <param id="0" name="Name">&quot;idle&quot;</param>
                    <param id="1" name="Parameter {n}"></param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="1" name="Is overlapping another object" type="Player3">
                    <param id="0" name="Object">Sprite</param>
                </condition>
                <condition id="-8" name="Compare two values" type="System">
                    <param id="0" name="First value">Player3.Platform.VectorY </param>
                    <param id="1" name="Comparison">4</param>
                    <param id="2" name="Second value">-750</param>
                </condition>
            </conditions>
            <actions>
                <action behavior="Platform" id="9" name="Set vector Y" type="Player3">
                    <param id="0" name="Vector Y">Player3.Platform.VectorY - 75</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="0" name="On key pressed" type="Keyboard">
                    <param id="0" name="Key">84 (T)</param>
                </condition>
            </conditions>
            <actions>
                <action id="5" name="Set frame" type="Player_Body_Art_Test">
                    <param id="0" name="Frame number">Player_Body_Art_Test.AnimationFrame+1</param>
                </action>
                <action id="-10" name="Set value" type="Player_Body_Art_Test">
                    <param id="0" name="Instance variable">fatState</param>
                    <param id="1" name="Value">Player_Body_Art_Test.fatState+1</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="0" name="On key pressed" type="Keyboard">
                    <param id="0" name="Key">82 (R)</param>
                </condition>
            </conditions>
            <actions>
                <action id="5" name="Set frame" type="Player_Body_Art_Test">
                    <param id="0" name="Frame number">Player_Body_Art_Test.AnimationFrame-1</param>
                </action>
                <action id="-10" name="Set value" type="Player_Body_Art_Test">
                    <param id="0" name="Instance variable">fatState</param>
                    <param id="1" name="Value">Player_Body_Art_Test.fatState-1</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="-7" name="Compare instance variable" type="Player_Body_Art_Test">
                    <param id="0" name="Instance variable">fatState</param>
                    <param id="1" name="Comparison">0</param>
                    <param id="2" name="Value">4</param>
                </condition>
            </conditions>
            <actions>
                <action behavior="Platform" id="4" name="Set jump strength" type="Player_Collision">
                    <param id="0" name="Jump strength">350</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="-7" name="Compare instance variable" type="Player_Body_Art_Test">
                    <param id="0" name="Instance variable">fatState</param>
                    <param id="1" name="Comparison">0</param>
