<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>Functions</name>
    <events>
        <event-block>
            <conditions>
                <condition id="0" name="On function" type="Function">
                    <param id="0" name="Name">&quot;idle&quot;</param>
                </condition>
                <condition id="-7" name="Compare instance variable" type="Player3">
                    <param id="0" name="Instance variable">heartRate</param>
                    <param id="1" name="Comparison">4</param>
                    <param id="2" name="Value">0.1</param>
                </condition>
            </conditions>
            <actions>
                <action id="-12" name="Subtract from" type="Player3">
                    <param id="0" name="Instance variable">heartRate</param>
                    <param id="1" name="Value">0.01</param>
                </action>
                <action id="5" name="Set playback rate" type="Audio">
                    <param id="0" name="Tag">&quot;heartbeat&quot;</param>
                    <param id="1" name="Playback rate">Player3.heartRate</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="0" name="On function" type="Function">
                    <param id="0" name="Name">&quot;move&quot;</param>
                </condition>
            </conditions>
            <actions>
                <action id="-5" name="Set width" type="Player3">
                    <param id="0" name="Width">Player3.Width -0.01</param>
                </action>
            </actions>
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="-7" name="Compare instance variable" type="Player3">
                            <param id="0" name="Instance variable">heartRate</param>
                            <param id="1" name="Comparison">2</param>
                            <param id="2" name="Value">4.99</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-11" name="Add to" type="Player3">
                            <param id="0" name="Instance variable">heartRate</param>
                            <param id="1" name="Value">0.01</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-block>
        <event-block>
            <conditions>
                <condition id="0" name="On function" type="Function">
                    <param id="0" name="Name">&quot;bacon&quot;</param>
                </condition>
                <condition id="-7" name="Compare instance variable" type="Player3">
                    <param id="0" name="Instance variable">heartRate</param>
                    <param id="1" name="Comparison">2</param>
                    <param id="2" name="Value">4.75</param>
                </condition>
            </conditions>
            <actions>
                <action id="-5" name="Set width" type="Player3">
                    <param id="0" name="Width">1.25 * Player3.Width</param>
                </action>
                <action id="-11" name="Add to" type="Player3">
                    <param id="0" name="Instance variable">heartRate</param>
                    <param id="1" name="Value">0.25</param>
                </action>
            </actions>
        </event-block>
    </events>
</c2eventsheet>
