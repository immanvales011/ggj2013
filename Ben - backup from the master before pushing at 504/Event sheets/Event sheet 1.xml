        </event-block>
        <event-block>
            <conditions>
                <condition id="-5" name="Compare width" type="PlayerBody">
                    <param id="0" name="Comparison">3</param>
                    <param id="1" name="Width">50</param>
                </condition>
                <condition id="-5" name="Compare width" type="PlayerBody">
                    <param id="0" name="Comparison">4</param>
                    <param id="1" name="Width">25</param>
                </condition>
            </conditions>
            <actions>
                <action id="-10" name="Set value" type="PlayerBody">
                    <param id="0" name="Instance variable">fatState</param>
                    <param id="1" name="Value">3</param>
                </action>
                <action behavior="Platform" id="4" name="Set jump strength" type="PlayerCollision">
