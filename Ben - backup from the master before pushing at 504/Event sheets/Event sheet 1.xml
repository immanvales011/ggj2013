<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>Event sheet 1</name>
    <events>
        <include>Checkpoints</include>
        <include>Barred</include>
        <include>PressureButtons</include>
        <include>Functions</include>
        <include>Breakables</include>
        <include>Treadmills</include>
        <event-block>
            <conditions>
                <condition id="-2" name="On start of layout" type="System" />
            </conditions>
            <actions>
                <action id="-10" name="Set value" type="PlayerBody">
                    <param id="0" name="Instance variable">widthStart</param>
                    <param id="1" name="Value">PlayerBody.Width</param>
                </action>
                <action id="-10" name="Set value" type="PlayerBody">
                    <param id="0" name="Instance variable">fatState</param>
                    <param id="1" name="Value">3</param>
                </action>
                <action id="0" name="Play" type="Audio">
                    <param id="0" name="Audio file">SFX_heartbeat_06</param>
                    <param id="2" name="Loop">1</param>
                    <param id="3" name="Volume">0</param>
                    <param id="1" name="Tag (optional)">&quot;heartbeat&quot;</param>
                </action>
                <action id="0" name="Play" type="Audio">
                    <param id="0" name="Audio file">SFX_breathing_06</param>
                    <param id="2" name="Loop">1</param>
                    <param id="3" name="Volume">-100</param>
                    <param id="1" name="Tag (optional)">&quot;breathing&quot;</param>
                </action>
                <action behavior="Pin" id="0" name="Pin to object" type="PlayerHead">
                    <param id="0" name="Pin to">PlayerCollision</param>
                    <param id="1" name="Mode">0</param>
                </action>
                <action behavior="Pin" id="0" name="Pin to object" type="PlayerBody">
                    <param id="0" name="Pin to">PlayerCollision</param>
                    <param id="1" name="Mode">0</param>
                </action>
                <action behavior="Pin" id="0" name="Pin to object" type="PlayerFeet">
                    <param id="0" name="Pin to">PlayerCollision</param>
                    <param id="1" name="Mode">0</param>
                </action>
                <action id="5" name="Set frame" type="PlayerBody">
                    <param id="0" name="Frame number">2</param>
                </action>
            </actions>
        </event-block>
        <comment>Decide if &quot;player is moving&quot; is required for weight loss.</comment>
        <event-block>
            <conditions>
                <condition id="-1" name="Every tick" type="System" />
            </conditions>
            <actions />
            <sub-events>
                <event-block any="1">
                    <conditions>
                        <condition id="2" name="Key is down" type="Keyboard">
                            <param id="0" name="Key">39 (Right arrow)</param>
                        </condition>
                        <condition id="2" name="Key is down" type="Keyboard">
                            <param id="0" name="Key">37 (Left arrow)</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="0" name="Call function" type="Function">
                            <param id="0" name="Name">&quot;move&quot;</param>
                            <param id="1" name="Parameter {n}"></param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-block>
        <event-block>
            <conditions>
                <condition id="-2" name="Compare Y" type="player_Limbs">
                    <param id="0" name="Comparison">4</param>
                    <param id="1" name="Y co-ordinate">LayoutHeight</param>
                </condition>
            </conditions>
            <actions>
                <action id="-26" name="Restart layout" type="System" />
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="0" name="On key pressed" type="Keyboard">
                    <param id="0" name="Key">39 (Right arrow)</param>
                </condition>
            </conditions>
            <actions>
                <action id="7" name="Set mirrored" type="PlayerHead">
                    <param id="0" name="State">1</param>
                </action>
                <action id="7" name="Set mirrored" type="PlayerFeet">
                    <param id="0" name="State">1</param>
                </action>
                <action id="-13" name="Set boolean" type="PlayerBody">
                    <param id="0" name="Instance variable">faceLeft</param>
                    <param id="1" name="Value">0</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="0" name="On key pressed" type="Keyboard">
                    <param id="0" name="Key">37 (Left arrow)</param>
                </condition>
            </conditions>
            <actions>
                <action id="7" name="Set mirrored" type="PlayerHead">
                    <param id="0" name="State">0</param>
                </action>
                <action id="7" name="Set mirrored" type="PlayerFeet">
                    <param id="0" name="State">0</param>
                </action>
                <action id="-13" name="Set boolean" type="PlayerBody">
                    <param id="0" name="Instance variable">faceLeft</param>
                    <param id="1" name="Value">1</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="0" name="On collision with another object" type="ent_bacon">
                    <param id="0" name="Object">PlayerCollision</param>
                </condition>
            </conditions>
            <actions>
                <action id="0" name="Call function" type="Function">
                    <param id="0" name="Name">&quot;bacon&quot;</param>
                    <param id="1" name="Parameter {n}"></param>
                </action>
                <action id="-9" name="Destroy" type="ent_bacon" />
            </actions>
        </event-block>
        <comment>Draw UI elements</comment>
        <event-block collapsed="1">
            <conditions>
                <condition id="-1" name="Every tick" type="System" />
            </conditions>
            <actions>
                <action id="0" name="Set text" type="UI_Width">
                    <param id="0" name="Text">&quot;Width: &quot; &amp;int(PlayerBody.width)</param>
                </action>
                <action id="0" name="Set text" type="UI_Weight">
                    <param id="0" name="Text">&quot;Weight: &quot; &amp;int(PlayerBody.Width*4)</param>
                </action>
                <action id="0" name="Set text" type="UI_Heartrate">
                    <param id="0" name="Text">&quot;Heart Rate: &quot; &amp;int(PlayerBody.heartRate * 100)</param>
                </action>
                <action id="0" name="Set text" type="UI_FatState">
                    <param id="0" name="Text">&quot;Fat State: &quot; &amp;int(PlayerBody.fatState)</param>
                </action>
            </actions>
            <sub-events>
                <comment>Cap max player width at 70 pixels</comment>
                <event-block>
                    <conditions>
                        <condition id="-5" name="Compare width" type="PlayerBody">
                            <param id="0" name="Comparison">4</param>
                            <param id="1" name="Width">70</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-5" name="Set width" type="PlayerBody">
                            <param id="0" name="Width">70</param>
                        </action>
                    </actions>
                    <sub-events>
                        <comment>Cap min player width at 10 pixels</comment>
                    </sub-events>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-5" name="Compare width" type="PlayerBody">
                            <param id="0" name="Comparison">2</param>
                            <param id="1" name="Width">10</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-5" name="Set width" type="PlayerBody">
                            <param id="0" name="Width">10</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-block>
        <comment>Set fatness states corresponding to player width</comment>
        <event-block>
            <conditions>
                <condition id="-5" name="Compare width" type="PlayerBody">
                    <param id="0" name="Comparison">4</param>
