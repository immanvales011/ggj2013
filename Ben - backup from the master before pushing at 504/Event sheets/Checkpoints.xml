<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>Checkpoints</name>
    <events>
        <variable constant="0" name="lastCheckpointReached" static="0" type="number">-1</variable>
        <event-block>
            <conditions>
                <condition id="0" name="On collision with another object" type="PlayerCollision">
                    <param id="0" name="Object">Checkpoint</param>
                </condition>
                <condition id="3" name="Compare frame" type="Checkpoint">
                    <param id="0" name="Comparison">0</param>
                    <param id="1" name="Number">0</param>
                </condition>
            </conditions>
            <actions>
                <action id="-9" name="Set value" type="System">
                    <param id="0" name="Variable">lastCheckpointReached</param>
                    <param id="1" name="Value">Checkpoint.index</param>
                </action>
                <action id="5" name="Set frame" type="Checkpoint">
                    <param id="0" name="Frame number">1</param>
                </action>
            </actions>
        </event-block>
    </events>
</c2eventsheet>
